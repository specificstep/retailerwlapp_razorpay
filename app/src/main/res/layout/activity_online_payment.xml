<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="specificstep.com.Activities.OnlinePaymentActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:gravity="center_vertical"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/btnPaymentRequestDetailBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_back"
            app:backgroundTint="@color/colorWhite"
            tools:ignore="MissingPrefix"
            android:layout_weight="1.35"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Wallet Topup"
            android:textColor="@color/white"
            android:textSize="@dimen/content_text_size"
            android:textStyle="bold"
            android:layout_weight="0.45" />

        <ImageButton
            android:id="@+id/imgPaymentRequestListWallet"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:src="@drawable/ic_wallet"
            android:tint="@color/colorWhite"
            android:layout_weight="1.2"
            android:visibility="invisible" />

    </LinearLayout>


<LinearLayout
    android:padding="20dp"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextAppearance="@style/TextLabel">

            <EditText
                android:id="@+id/edtMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/dmt_search_sender_hint"
                android:inputType="number"
                android:maxLength="10" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:hintTextAppearance="@style/TextLabel">

            <EditText
                android:id="@+id/edtamount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/dmt_search_sender_amount"
                android:inputType="number" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/square_round_corner_colorprimary"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:text="@string/str_submit"
        android:textColor="@color/white"
        android:textSize="@dimen/btn_content_text_small_size" />

</LinearLayout>
