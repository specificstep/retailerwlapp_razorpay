<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnr_view_offer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:weightSum="2">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.5">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/background_circle"/>

        <TextView
            android:id="@+id/txt_view_offer_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="199"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/content_text_small_size" />
        </FrameLayout>

        <TextView
            android:id="@+id/txt_view_offer_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="Rs.199=1.5GB\/day+ Unlimited  Local+STD call Roaming ma pan+100SMS per day;28 divas maate.TnC lagu."
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/content_text_small_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDefault" />

</LinearLayout>