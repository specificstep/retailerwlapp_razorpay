<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lnrRechargeStatus"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context="specificstep.com.Fragments.RechargeStatusFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgRechargeStatusCompany"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/placeholder_icon" />

                    <TextView
                        android:id="@+id/txtRechargeCompany"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_small_size" />

                    <TextView
                        android:id="@+id/txtRechargeStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_title_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtRechargeStatusAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/popup_content_title_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgRechargeStatusIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtRechargeStatusDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorDefault" />

                    <TextView
                        android:id="@+id/txtRechargeStatusName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_size" />

                    <LinearLayout
                        android:id="@+id/lnrRechargeStatusRechargeAgain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_mobile"
                            android:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/txtRechargeStatusRechargeAgain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/recharge_status_recharge_again"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/content_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lnrRechargeStatusDownload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/colorPrimaryDark" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:text="@string/recharge_status_download"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/content_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorDefault" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_status_details"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_title_text_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recharge_status_wallet"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/content_text_size" />

                        <TextView
                            android:id="@+id/txtRechargeStatusWallet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/content_text_size" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtRechargeStatusTransactionId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_small_size" />

                    <TextView
                        android:id="@+id/txtRechargeStatusOperatorId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_small_size"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <Button
                            android:id="@+id/btnRechargeStatusComplain"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@color/colorPrimaryDark"
                            android:padding="10dp"
                            android:text="@string/recharge_status_complain"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/btn_content_text_small_size" />

                        <Button
                            android:id="@+id/btnRechargeStatusClose"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1.3"
                            android:background="@color/colorPrimaryDark"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="Close"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/btn_content_text_small_size" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lnrRechargeReceipt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imgRechargeStatusCompanyReceipt"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/placeholder_icon" />

                    <TextView
                        android:id="@+id/txtRechargeCompanyReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_small_size" />

                    <TextView
                        android:id="@+id/txtRechargeStatusReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_title_text_size" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txtRechargeStatusAmountReceipt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/popup_content_title_text_size"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imgRechargeStatusIconReceipt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="10dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtRechargeStatusDateReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp" />

                    <View
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/colorDefault" />

                    <TextView
                        android:id="@+id/txtRechargeStatusNameReceipt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_size" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorDefault" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recharge_status_details"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_title_text_size"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/recharge_status_wallet"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/content_text_size" />

                        <TextView
                            android:id="@+id/txtRechargeStatusWalletReceipt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end"
                            android:textAlignment="textEnd"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/content_text_size" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtRechargeStatusTransactionIdReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_small_size" />

                    <TextView
                        android:id="@+id/txtRechargeStatusOperatorIdReceipt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/content_text_small_size"
                        android:visibility="gone" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
