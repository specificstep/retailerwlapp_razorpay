<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Detail"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/popup_content_title_text_size"
        android:textAlignment="center"
        android:padding="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_person1"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtDmtVerifyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="mansi patel"
                android:paddingLeft="10dp"
                android:textSize="@dimen/popup_content_text_size"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_phone"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtDmtVerifyMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09238984392"
                android:paddingLeft="10dp"
                android:textSize="@dimen/popup_content_text_size"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrDmtVerifyEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_email"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtDmtVerifyEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jhdjh"
                android:paddingLeft="10dp"
                android:textSize="@dimen/popup_content_text_size"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrDmtVerifyDob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cake"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtDmtVerifyDob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="jhdjh"
                android:paddingLeft="10dp"
                android:textSize="@dimen/popup_content_text_size"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnDMTVerifyCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dmt_search_popup_cancel"
                android:background="@drawable/square_round_corner_colordefault"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_content_text_small_size"
                android:layout_marginRight="10dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btnDMTVerifyUser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dmt_search_popup_verify_user"
                android:background="@drawable/square_round_corner_colorprimary"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_content_text_small_size"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>