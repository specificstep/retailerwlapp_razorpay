<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            android:id="@+id/lnrDthRecharge"
            android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.2">

                <ImageView
                    android:id="@+id/tv_company_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/tv_company_name_fragment_DTH_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/content_text_size"
                    android:gravity="center_horizontal"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/tv_change_company"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1.8"
                android:background="@drawable/ic_mode_edit_black_30dp"
                android:backgroundTint="@color/colorBlack"
                android:gravity="center"
                android:layout_gravity="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="DTH Recharge"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:padding="5dp"
                android:weightSum="3"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Product : "
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/content_title_text_size"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_product_name_fragment_DTH_recharge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:padding="3dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp"/>

                <ImageButton
                    android:id="@+id/tv_change_product"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1.35"
                    android:background="@drawable/ic_mode_edit_black_24dp"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="Change" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_Recharge_MobileNumberView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:src="@drawable/dth"
                    android:tint="@color/colorPrimaryDark"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:background="@drawable/square_round_corner"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <EditText
                        android:id="@+id/edt_mo_no_fragment_recharge"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.8"
                        android:hint="@string/str_smart_no"
                        android:inputType="number"
                        android:background="@android:color/transparent"
                        android:padding="10dp"
                        android:textColor="@color/colorBlack"
                        android:textColorHint="@color/colorBlack"
                        android:text="1234567891234"
                        android:textSize="34sp"/>

                    <ImageView
                        android:id="@+id/img_DTHRecharge_AllContacts"
                        android:layout_width="0dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_contact_list"
                        android:tint="@color/colorPrimaryDark"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_DTHRecharge_NameView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_person_white"/>

                <EditText
                    android:id="@+id/edt_DTHRecharge_Name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:background="@drawable/square_round_corner"
                    android:hint="Name"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/content_title_text_size"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/circle_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.3"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_circle"/>

                <Spinner
                    android:id="@+id/sp_circle_fragment_recharge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:background="@drawable/square_round_corner"
                    android:padding="10dp"
                    android:entries="@array/circle_array"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:tint="@color/colorPrimaryDark"
                    android:src="@drawable/ic_rs"/>


                <EditText
                    android:id="@+id/edt_amt_fragment_recharge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.7"
                    android:background="@drawable/square_round_corner"
                    android:gravity="center_vertical"
                    android:hint="@string/str_amount"
                    android:inputType="numberDecimal"
                    android:maxLength="6"
                    android:padding="10dp"
                    android:textColor="@color/colorBlack"
                    android:textColorHint="@color/colorBlack"
                    android:textSize="@dimen/content_title_text_size"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_DTHRecharge_IsCreditView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/chk_DTHRecharge_IsCredit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="3dp"
                    android:buttonTint="@color/colorBlack"
                    android:text="Is Credit"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/content_title_text_size"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_view_offers_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:padding="3dp"
                android:background="@drawable/square_round_corner_colordefault"
                android:textSize="@dimen/btn_content_text_small_size"
                android:textColor="@color/colorWhite"
                android:text="@string/str_view_offer_recharge"/>

            <Button
                android:id="@+id/btn_proceed_fragment_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/square_round_corner_colorprimary"
                android:padding="3dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/btn_content_text_small_size"
                android:text="@string/str_proceed_to_recharge"/>

            <Button
                android:id="@+id/btn_view_customer_info_recharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/square_round_corner_colordefault"
                android:padding="3dp"
                android:gravity="center"
                android:text="@string/str_customer_info_title"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/btn_content_text_small_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>