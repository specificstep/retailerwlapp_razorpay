<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Payment Details"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/content_title_text_size"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_wallet"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtPopupPaymentWalletType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_rs"
                android:paddingTop="3dp"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtPopupPaymentAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_bank"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtPopupPaymentBank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_text_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnrPopupPaymentNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_note"
                android:tint="@color/colorPrimaryDark"/>

            <TextView
                android:id="@+id/txtPopupPaymentNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:autoSizeTextType="uniform"
                android:paddingLeft="10dp"
                android:textSize="@dimen/content_text_size" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtPopupPaymentMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimaryDark"
            android:padding="5dp"
            android:textSize="@dimen/content_title_text_size"
            android:textColor="@color/white"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnPopupPaymentCancel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@color/colorDefault"
                android:text="@string/dmt_add_sender_btn_cancel"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_content_text_small_size" />

            <Button
                android:id="@+id/btnPopupPaymentSubmit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="@string/dmt_add_sender_btn_submit"
                android:textColor="@color/white"
                android:textSize="@dimen/btn_content_text_small_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>