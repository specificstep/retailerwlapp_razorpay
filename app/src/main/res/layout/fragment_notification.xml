<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:id="@+id/lnrNotification">

    <LinearLayout
        android:id="@+id/ll_recycler_view_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <ListView
            android:id="@+id/lst_Adapter_Notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll"></ListView>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgNoDataNotification"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/nodata_found"
        android:visibility="gone" />

</FrameLayout>
